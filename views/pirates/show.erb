<html>
  <head>
    <meta charset="UTF-8">
    <title>PiratesShips</title>
  </head>
<body>

<h1>Pirate</h1>
 
<div class="pirate">
  <h3>Name: <%= @pirate.name %></h3><br>
  <h4>Weight: <%= @pirate.weight %></h4>
  <h4>Height: <%= @pirate.height %></h4>
</div><br>
<h1>Ships</h1>
<% @ships.each do |ship| %>
  <div class="ship">
    <h2>Name: <%= ship.name %></h2><br>
    <h3>Type: <%= ship.type %></h3><br>
    <h3>Booty Attributes: <%= ship.booty %></h3><br>
  </div><br>
<% end %>

</body>
</html>
